<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Simons Collections"
                android:layout_marginTop="10dp"
                android:textAlignment="inherit"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/designer"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:src="@raw/suit5"
                android:id="@+id/dp"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Simon's Collections"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textAlignment="inherit"
                android:layout_below="@+id/designer"
                android:id="@+id/designer2"
                android:typeface="serif"
                />
            <android.support.v7.widget.CardView
                android:layout_height="90dp"
                android:layout_width="140dp"
                android:background="@color/kongablue"
                android:layout_below="@+id/designer2"
                android:layout_toStartOf="@+id/dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="25dp"
                android:layout_alignParentBottom="true"
                >
                <RelativeLayout
                    android:layout_width="70dp"
                    android:id="@+id/rela1"
                    android:layout_gravity="left"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_section">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" $940.00"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/price"
                        android:typeface="serif"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rela2"
                    android:layout_gravity="right"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_section">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="-10%"
                        android:textStyle="bold"
                        android:id="@+id/buy_button"
                        android:textColor="@color/white"/>
                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </RelativeLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>